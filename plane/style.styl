$bg_color = #ffd200

*
    margin 0
    padding 0

@keyframes rotating 
    0%  
        transform rotateZ(-90deg)
    30%
        transform rotateZ(-180deg)
    100%   
        transform rotateZ(90deg)

@keyframes undulate 
    0%,50%,100%
        transform translate3d(0,0,0)
    25%
        transform translate3d(-150px,-26px,0)
    35%
        transform translate3d(-150px,-126px,0)
    45%
        transform translate3d(-100px,-100px,0)
    55%
        transform translate3d(-50px,-50px,0)
    75%
        transform translate3d(20px,28px,1110px)

html,body 
    width 100%
    height 100%

.plane-page
    width 100%
    height 100%
    background-color $bg_color
    position relative
    .plane-wrapper
        position absolute
        left 20%
        top 40%
        animation: undulate 8s linear infinite alternate
        perspective 2500px
        .plane
            width 100%
        .rotate-container
            position absolute
            top 51.7003%
            left 13.1%
            display inline-block
            width 27.424%
            height 14.447%
            transform-origin center center
            animation rotating .2s linear infinite reverse
            .propeller
                width 100%
                transform rotateY(-28deg)
